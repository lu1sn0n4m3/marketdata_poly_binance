# =============================================================================
# Production Environment Variables
# =============================================================================
# Copy this file to prod.env and fill in your values.
# NEVER commit prod.env to git!
#
# Location on VPS: /home/luis/marketdata/secrets/prod.env
# =============================================================================

# -----------------------------------------------------------------------------
# S3-Compatible Object Storage (Hetzner)
# -----------------------------------------------------------------------------
# Get these from Hetzner Cloud Console > Object Storage > Your Bucket > Access Keys

S3_ENDPOINT=https://nbg1.your-objectstorage.com
# ^ Replace with your actual endpoint (e.g., https://fsn1.your-objectstorage.com)

S3_REGION=nbg1
# ^ Usually the datacenter code (nbg1, fsn1, hel1, etc.)

S3_BUCKET=your-bucket-name
# ^ Your bucket name

S3_ACCESS_KEY_ID=paste-your-access-key-here
# ^ Access Key ID from Hetzner

S3_SECRET_ACCESS_KEY=paste-your-secret-key-here
# ^ Secret Access Key from Hetzner

# -----------------------------------------------------------------------------
# Upload Settings
# -----------------------------------------------------------------------------

UPLOAD_PREFIX=prod/
# ^ Prefix for all S3 keys (allows dev/ vs prod/ separation)

SCAN_INTERVAL_SECONDS=60
# ^ How often to scan for new files (seconds)

MIN_AGE_SECONDS_BEFORE_UPLOAD=120
# ^ Wait this long after file creation before uploading (avoid races)

MAX_CONCURRENT_UPLOADS=2
# ^ Number of parallel uploads

# -----------------------------------------------------------------------------
# Local Retention (set to 0 to disable deletion)
# -----------------------------------------------------------------------------

RETENTION_DAYS_LOCAL=0
# ^ Days to keep local files after upload (0 = never delete)

# -----------------------------------------------------------------------------
# Telegram Notifications
# -----------------------------------------------------------------------------
# Create a bot via @BotFather on Telegram, then get your chat ID

TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz
# ^ Token from @BotFather (looks like: 123456789:ABCdefGHI...)

TELEGRAM_CHAT_ID=123456789
# ^ Your chat ID (send a message to bot, then check getUpdates API)

TELEGRAM_ENABLED=true
# ^ Set to "false" to disable notifications

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------

LOG_LEVEL=INFO
# ^ DEBUG, INFO, WARNING, ERROR

# -----------------------------------------------------------------------------
# Data Directory (inside container)
# -----------------------------------------------------------------------------

DATA_DIR=/data
# ^ Mount point for the shared volume (don't change unless you know why)
