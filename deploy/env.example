# =============================================================================
# VPS Environment Variables
# =============================================================================
# Copy to .env and fill in your values
# Location on VPS: /home/luis/marketdata/.env
# =============================================================================

# -----------------------------------------------------------------------------
# Image Configuration
# -----------------------------------------------------------------------------

# Your GitHub username or organization (lowercase)
GITHUB_OWNER=your-github-username

# Image tag to deploy (use commit SHA for pinned deploys, or "latest")
# Get SHA from: https://github.com/<owner>/<repo>/actions
IMAGE_TAG=latest

# -----------------------------------------------------------------------------
# S3-Compatible Object Storage (Hetzner)
# -----------------------------------------------------------------------------

S3_ENDPOINT=https://nbg1.your-objectstorage.com
S3_REGION=eu-central
S3_BUCKET=marketdata-archive
S3_ACCESS_KEY_ID=your-access-key
S3_SECRET_ACCESS_KEY=your-secret-key

# -----------------------------------------------------------------------------
# Upload Settings
# -----------------------------------------------------------------------------

UPLOAD_PREFIX=prod/
SCAN_INTERVAL_SECONDS=60
MIN_AGE_SECONDS_BEFORE_UPLOAD=120
MAX_CONCURRENT_UPLOADS=2

# -----------------------------------------------------------------------------
# Local Retention (0 = never delete local files)
# -----------------------------------------------------------------------------

RETENTION_DAYS_LOCAL=0

# -----------------------------------------------------------------------------
# Telegram Notifications
# -----------------------------------------------------------------------------

TELEGRAM_BOT_TOKEN=your-bot-token
TELEGRAM_CHAT_ID=your-chat-id
TELEGRAM_ENABLED=true

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------

LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# Data Directory (inside container - don't change)
# -----------------------------------------------------------------------------

DATA_DIR=/data
