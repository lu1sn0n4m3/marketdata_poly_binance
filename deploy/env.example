# =============================================================================
# VPS Environment Variables
# =============================================================================
# Copy to .env and fill in your values
# Location on VPS: /home/luis/marketdata/.env
# =============================================================================

# -----------------------------------------------------------------------------
# Image Configuration
# -----------------------------------------------------------------------------

# Your GitHub username or organization (lowercase)
GITHUB_OWNER=your-github-username

# Image tag to deploy (use commit SHA for pinned deploys, or "latest")
# Get SHA from: https://github.com/<owner>/<repo>/actions
IMAGE_TAG=latest

# -----------------------------------------------------------------------------
# S3-Compatible Object Storage (Hetzner)
# -----------------------------------------------------------------------------

S3_ENDPOINT=https://nbg1.your-objectstorage.com
S3_REGION=eu-central
S3_BUCKET=marketdata-archive
S3_ACCESS_KEY_ID=your-access-key
S3_SECRET_ACCESS_KEY=your-secret-key

# -----------------------------------------------------------------------------
# Upload Settings
# -----------------------------------------------------------------------------

UPLOAD_PREFIX=prod/
SCAN_INTERVAL_SECONDS=60
MIN_AGE_SECONDS_BEFORE_UPLOAD=120
MAX_CONCURRENT_UPLOADS=2

# -----------------------------------------------------------------------------
# Local Retention (0 = never delete local files)
# -----------------------------------------------------------------------------

RETENTION_DAYS_LOCAL=0

# -----------------------------------------------------------------------------
# Telegram Notifications
# -----------------------------------------------------------------------------

TELEGRAM_BOT_TOKEN=your-bot-token
TELEGRAM_CHAT_ID=your-chat-id
TELEGRAM_ENABLED=true

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------

LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# Data Directory (inside container - don't change)
# -----------------------------------------------------------------------------

DATA_DIR=/data

# =============================================================================
# HourMM Trading System (Polymarket)
# =============================================================================
# These are REQUIRED for the polymarket_trader container

# -----------------------------------------------------------------------------
# Polymarket Credentials (REQUIRED)
# -----------------------------------------------------------------------------

# Your wallet private key for signing orders (0x prefixed)
# Example format: 0xefc98e5b73c363a72a482450718ab3d4cdf23e1ce21bdbb5d08cfe45f0ffd273
PM_PRIVATE_KEY=0x_YOUR_PRIVATE_KEY_HERE

# Your funder address (0x prefixed)
# Example format: 0x322fA7fbC46fF5D34316a5dDaECDd8ffef851F6f
PM_FUNDER=0x_YOUR_FUNDER_ADDRESS_HERE

# Signature type:
#   1 = EOA (Externally Owned Account - direct wallet)
#   2 = Proxy wallet (Safe multisig)
PM_SIGNATURE_TYPE=1

# -----------------------------------------------------------------------------
# Polymarket API Credentials (OPTIONAL)
# -----------------------------------------------------------------------------
# If not provided, these will be auto-derived from your private key
# You can get these from Polymarket's CLOB API settings

# PM_API_KEY=your_api_key
# PM_API_SECRET=your_api_secret
# PM_PASSPHRASE=your_passphrase

# -----------------------------------------------------------------------------
# HourMM Trading Configuration
# -----------------------------------------------------------------------------

# Base market slug - date/time is appended automatically based on Eastern Time
# Example: bitcoin-up-or-down -> bitcoin-up-or-down-january-22-7am-et
MARKET_SLUG=bitcoin-up-or-down

# Risk limits (in USDC)
# Set these based on your wallet size - they limit max exposure
MAX_RESERVED_CAPITAL=5.0
MAX_POSITION_SIZE=5.0
MAX_ORDER_SIZE=5.0
MAX_OPEN_ORDERS=4

# Session timers (milliseconds)
T_WIND_MS=600000
T_FLATTEN_MS=300000
HARD_CUTOFF_MS=60000
